# Configurações básicas
SECRET_KEY=your_secret_key_here
JWT_SECRET=your_jwt_secret_here

# Configurações do banco de dados (OBRIGATÓRIO)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database_name

# Configurações de APIs externas
OPENAI_KEY=sk-proj-your_openai_key_here

# Configurações do servidor
SERVER_HOST=0.0.0.0
SERVER_PORT=5000
DEBUG=True

# Configurações de CORS (separadas por vírgula)
CORS_ORIGINS=http://localhost:8081,http://localhost:19006,https://your-expo-tunnel.ngrok.io

# Configurações de segurança
JWT_ACCESS_TOKEN_EXPIRES=3600
BCRYPT_LOG_ROUNDS=12

# Configurações de rate limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_DEFAULT=100 per hour

# Instruções:
# 1. Copie este arquivo para .env
# 2. Substitua os valores pelos valores reais
# 3. Configure sua string de conexão do MongoDB Atlas
# 4. NUNCA commite o arquivo .env no controle de versão